<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="d-flex justify-content-center align-content-center mt-5">
      <div class="modal-content">
        <div class="fondo-modal">
          <div class="modal-header">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <h1 class="contact-form p-3"><%= t('boton') %></h1>
          <form target="_blank" action="https://formsubmit.co/06edde016f6c7562ba2d9f23cc684f15" method="POST">

            <input type="text" name="_honey" style="display:none">
            <input type="hidden" name="_captcha" value="false">
            <input type="hidden" name="_next" value="http://localhost:3000/contacts/message">
            <div class="form-group">
              <div class="form-row">

                  <input type="text" name="name" class="contact-form-text-area form-contact" placeholder="Full Name" required>

                  <input type="email" name="email" class="contact-form-text-area form-contact" placeholder="Email Address" required>

              </div>
            </div>
            <div class="form-group">
              <textarea placeholder="Your Message" class="contact-form-text-area form-contact w-100" name="message" required></textarea>
            </div>
            <button type="submit" class="boton p-2" data-bs-toggle="modal" data-bs-target="#exampleModal">Enviar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
