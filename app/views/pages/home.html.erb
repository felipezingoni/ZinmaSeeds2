    <div class="mx-5 toc">
      <h2 class="donde-title"><%= t 'donde-estamos' %></h2>
      <p class="donde-desc"><%= t 'desc-donde' %></p>
      <div class="mt-5">
        <%= link_to t('boton2-home'), "#", class:"boton btn-boton" %>
      </div>
      <div class="d-flex" style="position: relative;left: 72%;">
        <%= image_tag("https://storage.googleapis.com/zinmaimages/Arrow17_x6uwd0.svg", class:"flechas") %>
      </div>
        <p class="pro-primer m-4" data-aos="fade-up"
        data-aos-duration="3000"><%= t('donde-frase') %></p>
    </div>
    <%= image_tag("https://storage.googleapis.com/zinmaimages/DJI_0863_1_qymoix_iyvndr.webp", alt:"Ensayo", class:"plantas", loading:"lazy") %>
