    <div class="container">
        <div class="row">
        <div class="col-12 col-md-12">
            <h2 class="title-zinma">ZINMA SEEDS</h2>
            <div class="col-sm-12 col-lg-5 " data-aos="fade-up">
              <p class="description-zinma" ><%= t 'description' %></p>
