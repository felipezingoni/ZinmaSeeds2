<div class="product-banner">
  <h1><%= t 'product-title' %></h1>
</div>

<div class="container container-sm m-sm-5">
  <div class="d-flex">
    <ul class=" d-flex list-inline">
      <li><h2 class="font"><%= link_to t('Alfalfa'), products_alfalfa_path, class:"font2" %></h2></li>
      <li><h2 class="font"><%= link_to t('Sorgo'), products_sorgo_path, class:"font2" %></h2></li>
      <li><h2 class="font"><%= link_to t('Pasturas'), products_pasturas_path, class:"font2" %></h2></li>
      <li><h2 class="font-select"><%= link_to t('Cultivos'), products_cultivos_path, class:"font-select2" %></h2></li>
    </ul>
   </div>
</div>

<div class="container">
  <div class="row container">
      <div class="col-7">
      <div class="grid-card list-inline">
          <li><button class="card-type" data-bs-toggle="collapse" data-bs-target="#RABANITO">RABANITO</button></li>
          <li><button class="card-type" data-bs-toggle="collapse" data-bs-target="#VICIA">VICIA</button></li>
          <li><button class="card-type" data-bs-toggle="collapse" data-bs-target="#AVENANEGRA">AVENA NEGRA</button></li>
      </div>
      </div>
      <div class="col-5s d-flex">
          <div class="espaciador2"></div>
            <div class="tab-content accordion accordion-flush" id="accordionFlushExample">
              <div class="accordion-collapse collapse show" aria-expanded="true" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample" id="RABANITO">
                <h1 class="font-pro" style="font-size: 35px;"><%= t'rabanito-nom' %></h1>
                <p class="desc-pro2"><%= t'RABANITO' %></p>
                <div class="m-5">
                  <%= link_to "https://res.cloudinary.com/ddlmgs04n/image/upload/v1661544230/Zinma2.0/Rabanito_Forrajero_BOKITO_-_CS_fcdll8.pdf", target:"_blank",class:"btn-ficha" do %>
                    <p class="m-0 mx-1"><%= t'ficha' %></p>
                    <p class="m-0 mx-1"><%= image_tag("https://res.cloudinary.com/ddlmgs04n/image/upload/v1658257615/Zinma2.0/Vector-1_w6xmqf.svg") %></p>
                  <% end %>
                </div>
              </div>
              <div class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample" id="VICIA">
                <h1 class="font-pro" style="font-size: 35px;"><%= t'vicia-nom' %></h1>
                <p class="desc-pro2"><%= t'VICIA' %></p>
                <div class="m-5">
                  <%= link_to "https://res.cloudinary.com/ddlmgs04n/image/upload/v1661544231/Zinma2.0/VICIA_VILLOSA_MASSA_-_CS_wiv4nv.pdf", target:"_blank",class:"btn-ficha" do %>
                    <p class="m-0 mx-1"><%= t'ficha' %></p>
                    <p class="m-0 mx-1"><%= image_tag("https://res.cloudinary.com/ddlmgs04n/image/upload/v1658257615/Zinma2.0/Vector-1_w6xmqf.svg") %></p>
                  <% end %>
                </div>
              </div>
              <div class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample" id="AVENANEGRA">
                <h1 class="font-pro" style="font-size: 35px;"><%= t'avena-nom' %></h1>
                <p class="desc-pro2"><%= t'AVENA-NEGRA' %></p>
                <div class="m-5">
                  <%= link_to "https://res.cloudinary.com/ddlmgs04n/image/upload/v1661544232/Zinma2.0/Avena_Negra_ITACU%E0%B8%95_-_CS_nk5pg5.pdf", target:"_blank",class:"btn-ficha" do %>
                    <p class="m-0 mx-1"><%= t'ficha' %></p>
                    <p class="m-0 mx-1"><%= image_tag("https://res.cloudinary.com/ddlmgs04n/image/upload/v1658257615/Zinma2.0/Vector-1_w6xmqf.svg") %></p>
                  <% end %>
                </div>
              </div>
            </div>
      </div>
  </div>
</div>



<div class="intro mt-5" style="height: 696px;">
  <div class="container">
    <div class="d-flex justify-content-center flex-column align-items-center p-5 products-zinmas" >
      <%= image_tag("https://res.cloudinary.com/ddlmgs04n/image/upload/v1657911981/Zinma2.0/sorgo_1_qpsrr0.png", class:"position-absolute opacity-50") %>
      <h1 class="font-pro m-4"><%= t'Cultivos' %></h1>
      <p class="desc-pro m-4"><%= t'description-cultivos' %></p>
    </div>
      <div class="d-flex justify-content-center" style="position: relative;">
        <p class="pro-primer"><%= t'primera-calida' %></p>
        <%= image_tag("https://res.cloudinary.com/ddlmgs04n/image/upload/v1657911134/Zinma2.0/Arrow_16_futvng.svg", class:"flechas-pro") %>
        <%= image_tag("https://res.cloudinary.com/ddlmgs04n/image/upload/v1655855223/Zinma2.0/cultivo-de-servicio1_uknlor.png",  class:"bolsa") %>
        <%= image_tag("https://res.cloudinary.com/ddlmgs04n/image/upload/v1657911030/Zinma2.0/Arrow_17_udmr0w.svg", class:"flechas-pro") %>
        <p class="pro-rend"><%= t'rendimiento-com' %></p>
      </div>
  </div>
</div>

